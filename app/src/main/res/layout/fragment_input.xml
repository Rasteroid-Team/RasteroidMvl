<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_input_fragment"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllerActivity"
    android:orientation="vertical">

    <!--Seleccion de nave-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:text="@string/nameTextView"
        android:layout_gravity="center"
        android:textSize="28sp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:hint="@string/nameHintString"
        android:inputType="textCapSentences"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shipSelection"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />


    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/hr75"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50dp"
            android:background="#66F400"
            android:src="@drawable/hr75" />

        <ImageView
            android:id="@+id/phoenix"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/phoenix"
            android:backgroundTint="#00E44E"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textScreenNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="188dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_style"
        android:layout_height="100sp"
        android:textSize="25sp"
        android:text="START"
        android:layout_gravity="center"/>


</LinearLayout>